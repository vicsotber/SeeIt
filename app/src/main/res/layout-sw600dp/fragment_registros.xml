<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.tfg.ui.funcionalidades.FuncionalidadesFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="322dp"
        android:layout_height="299dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/logo_seeit"
        android:src="@drawable/ic_vector_eye"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/access_btn"
        android:layout_width="545dp"
        android:layout_height="124dp"
        android:layout_marginTop="52dp"
        android:text="@string/access_btn"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/access_advice" />

    <TextView
        android:id="@+id/access_advice"
        android:layout_width="609dp"
        android:layout_height="224dp"
        android:layout_marginTop="4dp"
        android:text="@string/access_advice"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>